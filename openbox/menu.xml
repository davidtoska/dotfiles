<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">

<menu id="root-menu" label="Openbox 3">
  <item label="Terminator (W-Return)">
    <action name="Execute"><execute>terminator</execute></action>
  </item>
  <item label="Chrome (W-w)">
    <action name="Execute"><execute>google-chrome-stable</execute></action>
  </item>
  <item label="Files (W-f)">
    <action name="Execute"><execute>pcmanfm</execute></action>
  </item>
  <item label="Code (W-c)">
    <action name="Execute"><execute>code</execute></action>
  </item>
  <item label="Webstorm (W-i)">
    <action name="Execute"><execute>/opt/WebStorm-232.10227.9/bin/webstorm.sh</execute></action>
  </item>
  <!-- This requires the presence of the 'obamenu' package to work -->
  <menu id="/Debian" />
  <separator />
  <menu id="applications-menu" label="Applications" execute="/usr/bin/obamenu"/>
  <separator />
  <item label="ObConf">
    <action name="Execute"><execute>obconf</execute></action>
  </item>
  <item label="Reconfigure">
    <action name="Reconfigure" />
  </item>
  <item label="Restart">
    <action name="Restart" />
  </item>
  <separator />
  <item label="Exit">
    <action name="Exit" />
  </item>
</menu>

</openbox_menu>
